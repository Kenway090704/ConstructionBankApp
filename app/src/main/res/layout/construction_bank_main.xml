<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res/com.constructionbankapp.ui"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ebs_region_bg1_fyqq" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="right" >

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="90dip"
            android:layout_height="300dip"
            android:layout_gravity="center"
            android:background="@drawable/turnplate_bg_left"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="100dip"
                android:text="贴心的银行服务，带给您更安全、便捷的智能金融体验。" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right"
            android:layout_width="230dip"
            android:layout_height="300dip"
            android:layout_gravity="center"
            android:background="@drawable/turnplate_bg_right"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="300dip"
                android:layout_height="300dip" >

                <com.duguang.baseanimation.ui.customview.circlemenu.CircleLayout
                    android:id="@+id/main_circle_layout"
                    android:layout_width="300dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    circle:firstChildPosition="South"
                    circle:isRotating="true"
                    circle:rotateToCenter="false" >

                    <!-- circle:circleBackground="@drawable/green"  > -->

                    <com.duguang.baseanimation.ui.customview.circlemenu.CircleImageView
                        android:id="@+id/laybtn1"
                        circle:name="安全中心"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@drawable/home_mbank_1_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="安全中心"
                            android:textSize="14dip" />
                    </com.duguang.baseanimation.ui.customview.circlemenu.CircleImageView>

                    <com.duguang.baseanimation.ui.customview.circlemenu.CircleImageView
                        android:id="@+id/laybtn6"
                        circle:name="信用卡"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@drawable/home_mbank_6_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="信用卡"
                            android:textSize="14dip" />
                    </com.duguang.baseanimation.ui.customview.circlemenu.CircleImageView>

                    <com.duguang.baseanimation.ui.customview.circlemenu.CircleImageView
                        android:id="@+id/laybtn5"
                        circle:name="我的账户"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@drawable/home_mbank_5_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="我的账户"
                            android:textSize="14dip" />
                    </com.duguang.baseanimation.ui.customview.circlemenu.CircleImageView>

                    <com.duguang.baseanimation.ui.customview.circlemenu.CircleImageView
                        android:id="@+id/laybtn4"
                        circle:name="转账汇款"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@drawable/home_mbank_4_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="转账汇款"
                            android:textSize="14dip" />
                    </com.duguang.baseanimation.ui.customview.circlemenu.CircleImageView>

                    <com.duguang.baseanimation.ui.customview.circlemenu.CircleImageView
                        android:id="@+id/laybtn3"
                        circle:name="投资理财"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@drawable/home_mbank_3_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="投资理财"
                            android:textSize="14dip" />
                    </com.duguang.baseanimation.ui.customview.circlemenu.CircleImageView>

                    <com.duguang.baseanimation.ui.customview.circlemenu.CircleImageView
                        android:id="@+id/laybtn2"
                        circle:name="特色服务"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center"
                            android:src="@drawable/home_mbank_2_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="特色服务"
                            android:textSize="14dip" />
                    </com.duguang.baseanimation.ui.customview.circlemenu.CircleImageView>
                </com.duguang.baseanimation.ui.customview.circlemenu.CircleLayout>

                <RelativeLayout
                    android:id="@+id/relbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <ImageView
                        android:layout_width="104.0dip"
                        android:layout_height="104.0dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/turnplate_center_unlogin" />

                    <ImageView
                        android:layout_width="116.0dip"
                        android:layout_height="116.0dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/turnplate_mask_unlogin" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>